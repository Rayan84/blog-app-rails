<h1><%= @user.name %>'s Posts:</h1>

<% @posts.each do |post| %>
 <h3><%= post.title %></h3>
  <p><%= post.text %></p>
  <p>Comments: <%= post.CommentsCounter %></p>
  <p>Likes: <%= post.likes_counter %></p>
  <% @comments.limit(5).where(posts_id: post.id).each do |comment| %>
    <p><%= comment.text %></p>
  <% end %>
<br>
<br>
<br>
<% end %>

<p>Find me in app/views/posts/index.html.erb</p>
