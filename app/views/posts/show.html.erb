<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<h1><%= @current_user.name %></h1>
<p><%= @current_user.PostsCounter%></p>
<% @recent_posts.each do |post| %>
  <h3><%= post.title %></h3>
  <p><%= post.text %>
  <p><%= post.author_id %>
  <p><%= post.created_at %>

  <% @comments.limit(5).where(posts_id: post.id).each do |comment| %>
   <p><%= comment.author_id %>: <%= comment.text %></p>
  <% end %>
  <br>
  <br>
  <hr>
<% end %>
